{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
      "typings/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "package.json",
    ".npmrc"
  ],
  "exclude": [
    "node_modules",
    "src/interface",
    "storage"
  ]
}
